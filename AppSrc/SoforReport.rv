    Object oFuvarlevel_DD is a cFuvarlevelDataDictionary
        Set DDO_Server To oAuto_DD
        Set DDO_Server To oSofor_DD
        Property Date pdStartfuvarl_datum
        Property Date pdStopfuvarl_datum

        Procedure OnConstrain 
            Date dStart dStop

            Get pdStartfuvarl_datum To dStart
            Get pdStopfuvarl_datum To dStop

            Case Begin
                Case (dStart <> 0 and dStop <> 0)
                    Constrain Fuvarlevel.fuvarl_datum between dStart and dStop
                    Case Break
                Case (dStart <> 0)
                    Constrain Fuvarlevel.fuvarl_datum GE dStart
                    Case Break
                Case (dStop <> 0)
                    Constrain Fuvarlevel.fuvarl_datum LE dStop
            Case End
        End_Procedure 
    End_Object 

